    <style>
        :root {
            --mongo-green: #13AA52;
            --mongo-green-alt: #23AA4A;
            --deep-dark: #001E2B;
            --deep-mid: #0D2B36;
            --deep-light: #243641;
            --neutral-light: #C9D1D9;
            --neutral-lightest: #F5F6F7;
            --accent-blue: #1168E3;
            --accent-purple: #8A51E5;
            --accent-orange: #F97316;
            --accent-red: #EB5757;
            --accent-yellow: #F59E0B;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            color: var(--neutral-light);
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Animated Background - using theme.css for orbs and particles */

        /* Main Container */
        .container {
            position: relative;
            z-index: 10;
            max-width: 1600px;
            margin: 0 auto;
            padding: 1.5rem;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Header */
        .terminal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            animation: fadeInDown 0.8s ease-out;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .back-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: var(--neutral-light);
            padding: 0.6rem 1rem;
            border-radius: 10px;
            cursor: pointer;
            font-size: 0.85rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: rgba(19, 170, 82, 0.1);
            border-color: var(--mongo-green);
            color: var(--mongo-green);
        }

        .terminal-title {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .terminal-title h1 {
            font-size: 1.75rem;
            font-weight: 600;
            background: linear-gradient(135deg, #fff 0%, var(--neutral-light) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .terminal-title .icon {
            font-size: 2rem;
            filter: drop-shadow(0 0 10px var(--mongo-green));
        }

        .header-actions {
            display: flex;
            gap: 0.75rem;
        }

        .action-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: var(--neutral-light);
            padding: 0.6rem 1rem;
            border-radius: 10px;
            cursor: pointer;
            font-size: 0.85rem;
            font-family: inherit;
            transition: all 0.3s ease;
        }

        .action-btn:hover {
            background: rgba(19, 170, 82, 0.1);
            border-color: var(--mongo-green);
        }

        .action-btn.danger:hover {
            background: rgba(235, 87, 87, 0.1);
            border-color: var(--accent-red);
            color: var(--accent-red);
        }

        /* Terminal Window */
        .terminal-window {
            flex: 1;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(30px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            animation: fadeInUp 0.8s ease-out 0.2s both;
            min-height: 500px;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Terminal Title Bar */
        .terminal-titlebar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.75rem 1rem;
            background: rgba(0, 0, 0, 0.3);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .titlebar-dots {
            display: flex;
            gap: 0.5rem;
        }

        .dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .dot:hover {
            transform: scale(1.2);
        }

        .dot-red {
            background: #FF5F57;
        }

        .dot-yellow {
            background: #FFBD2E;
        }

        .dot-green {
            background: #28CA42;
        }

        .titlebar-title {
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.8rem;
            color: rgba(255, 255, 255, 0.5);
        }

        .titlebar-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.4);
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: var(--mongo-green);
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
                box-shadow: 0 0 0 0 rgba(19, 170, 82, 0.7);
            }

            50% {
                opacity: 0.5;
                box-shadow: 0 0 0 6px rgba(19, 170, 82, 0);
            }
        }

        /* Terminal Content */
        .terminal-content {
            flex: 1;
            padding: 1rem;
            overflow: hidden;
            position: relative;
        }

        #terminal {
            height: 100%;
            width: 100%;
        }

        /* Custom Terminal Styling */
        .xterm {
            height: 100% !important;
        }

        .xterm-viewport {
            background: transparent !important;
        }

        .xterm-screen {
            height: 100% !important;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background: rgba(19, 170, 82, 0.3);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: rgba(19, 170, 82, 0.5);
        }

        /* Info Panel */
        .info-panel {
            background: rgba(13, 43, 54, 0.5);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 1rem 1.5rem;
            margin-top: 1rem;
            animation: fadeInUp 0.8s ease-out 0.4s both;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .info-icon {
            font-size: 1.25rem;
            opacity: 0.8;
        }

        .info-text {
            display: flex;
            flex-direction: column;
        }

        .info-label {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: rgba(255, 255, 255, 0.4);
        }

        .info-value {
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.85rem;
            color: var(--mongo-green);
        }

        /* Keyboard shortcuts hint */
        .shortcuts-hint {
            position: fixed;
            bottom: 1.5rem;
            right: 1.5rem;
            background: rgba(13, 43, 54, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1rem;
            font-size: 0.75rem;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
            z-index: 100;
        }

        .shortcuts-hint.visible {
            opacity: 1;
            pointer-events: all;
        }

        .shortcut-row {
            display: flex;
            justify-content: space-between;
            gap: 2rem;
            margin-bottom: 0.5rem;
        }

        .shortcut-row:last-child {
            margin-bottom: 0;
        }

        .shortcut-key {
            background: rgba(255, 255, 255, 0.1);
            padding: 0.15rem 0.5rem;
            border-radius: 4px;
            font-family: 'JetBrains Mono', monospace;
            color: var(--mongo-green);
        }

        /* Fullscreen mode */
        .fullscreen .terminal-header,
        .fullscreen .info-panel {
            display: none;
        }

        .fullscreen .terminal-window {
            border-radius: 0;
            min-height: 100vh;
        }

        .fullscreen .container {
            padding: 0;
            max-width: none;
        }

        /* Command suggestions popup */
        .suggestions-popup {
            position: absolute;
            bottom: 100%;
            left: 1rem;
            background: rgba(13, 43, 54, 0.98);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(19, 170, 82, 0.3);
            border-radius: 8px;
            padding: 0.5rem;
            margin-bottom: 0.5rem;
            display: none;
            max-height: 200px;
            overflow-y: auto;
            z-index: 50;
        }

        .suggestions-popup.active {
            display: block;
        }

        .suggestion-item {
            padding: 0.5rem 0.75rem;
            border-radius: 4px;
            cursor: pointer;
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.85rem;
            transition: background 0.2s ease;
        }

        .suggestion-item:hover,
        .suggestion-item.selected {
            background: rgba(19, 170, 82, 0.2);
        }

        .suggestion-cmd {
            color: var(--mongo-green);
        }

        .suggestion-desc {
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.75rem;
            margin-left: 0.5rem;
        }

        /* Loading overlay */
        .loading-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 100;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

        .loading-overlay.active {
            opacity: 1;
            pointer-events: all;
        }

        .loading-spinner {
            width: 40px;
            height: 40px;
            border: 3px solid rgba(255, 255, 255, 0.1);
            border-top-color: var(--mongo-green);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .terminal-header {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }

            .header-actions {
                width: 100%;
                justify-content: flex-start;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .titlebar-info {
                display: none;
            }
        }
    </style>
</head>

