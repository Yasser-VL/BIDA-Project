    <script>
        // Terminal configuration
        const term = new Terminal({
            fontSize: 14,
            fontFamily: '"JetBrains Mono", "Fira Code", monospace',
            cursorBlink: true,
            cursorStyle: 'bar',
            theme: {
                background: 'transparent',
                foreground: '#C9D1D9',
                cursor: '#13AA52',
                cursorAccent: '#001E2B',
                selectionBackground: 'rgba(19, 170, 82, 0.3)',
                black: '#0D2B36',
                red: '#EB5757',
                green: '#13AA52',
                yellow: '#F59E0B',
                blue: '#1168E3',
                magenta: '#8A51E5',
                cyan: '#00ED64',
                white: '#C9D1D9',
                brightBlack: '#243641',
                brightRed: '#FF6B6B',
                brightGreen: '#23AA4A',
                brightYellow: '#FFBD2E',
                brightBlue: '#4A90D9',
                brightMagenta: '#B47AEA',
                brightCyan: '#00FFB3',
                brightWhite: '#FFFFFF'
            },
            allowTransparency: true,
            convertEol: true,
            scrollback: 1000
        });

        // Addons
        const fitAddon = new FitAddon.FitAddon();
        const webLinksAddon = new WebLinksAddon.WebLinksAddon();

        term.loadAddon(fitAddon);
        term.loadAddon(webLinksAddon);

        // Open terminal
        const terminalContainer = document.getElementById('terminal');
        term.open(terminalContainer);
        fitAddon.fit();

        // State
        let commandBuffer = '';
        let commandHistory = JSON.parse(localStorage.getItem('terminal_history') || '[]');
        let historyIndex = commandHistory.length;
        let currentDir = '';
        let commandCount = parseInt(localStorage.getItem('terminal_cmd_count') || '0');
        const sessionStart = new Date();
        const PROMPT = '\x1b[32m‚ùØ\x1b[0m ';

        // Update stats
        document.getElementById('cmd-count').textContent = commandCount;

        // Welcome message
        function showWelcome() {
            term.writeln('\x1b[36m‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó\x1b[0m');
            term.writeln('\x1b[36m‚ïë\x1b[0m  \x1b[1;32müíª  System Terminal\x1b[0m                                          \x1b[36m‚ïë\x1b[0m');
            term.writeln('\x1b[36m‚ïë\x1b[0m  \x1b[90mPowered by Node.js & PowerShell\x1b[0m                             \x1b[36m‚ïë\x1b[0m');
            term.writeln('\x1b[36m‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù\x1b[0m');
            term.writeln('');
            term.writeln('\x1b[33m  Available commands:\x1b[0m');
            term.writeln('    \x1b[32mhelp\x1b[0m      - Show available commands');
            term.writeln('    \x1b[32mclear\x1b[0m     - Clear the terminal');
            term.writeln('    \x1b[32mdir/ls\x1b[0m    - List directory contents');
            term.writeln('    \x1b[32mcd <path>\x1b[0m - Change directory');
            term.writeln('    \x1b[32mmongosh\x1b[0m   - Open MongoDB shell commands info');
            term.writeln('');
            term.writeln('\x1b[90m  Type any command and press Enter to execute.\x1b[0m');
            term.writeln('\x1b[90m  Use ‚Üë/‚Üì arrows for command history.\x1b[0m');
            term.writeln('');
            writePrompt();
        }

        function writePrompt() {
            term.write(PROMPT);
        }

        // Command Queue System to handle rapid inputs (pastes)
        let commandQueue = [];
        let isProcessingQueue = false;

        async function queueCommand(cmd) {
            commandQueue.push(cmd);
            processQueue();
        }

        async function processQueue() {
            if (isProcessingQueue || commandQueue.length === 0) return;
            isProcessingQueue = true;

            try {
                // Process all commands in queue sequentially
                while (commandQueue.length > 0) {
                    const cmd = commandQueue.shift();
                    await executeCommand(cmd, true); // true = suppress redundant prompts if needed, but here we want standard behavior
                }
            } finally {
                isProcessingQueue = false;
            }
        }

        // Execute command via API
        async function executeCommand(cmd, fromQueue = false) {
            if (!cmd.trim()) {
                writePrompt();
                return;
            }

            // Built-in commands
            const trimmedCmd = cmd.trim().toLowerCase();

            if (trimmedCmd === 'clear' || trimmedCmd === 'cls') {
                term.clear();
                writePrompt();
                return;
            }

            if (trimmedCmd === 'help') {
                showHelp();
                writePrompt();
                return;
            }

            // Client-side mongosh blocking removed to allow server simulation


            // Add to history
            if (commandHistory[commandHistory.length - 1] !== cmd) {
                commandHistory.push(cmd);
                if (commandHistory.length > 100) commandHistory.shift();
                localStorage.setItem('terminal_history', JSON.stringify(commandHistory));
            }
            historyIndex = commandHistory.length;

            // Update command count
            commandCount++;
            document.getElementById('cmd-count').textContent = commandCount;
            localStorage.setItem('terminal_cmd_count', commandCount.toString());

            // Show loading
            document.getElementById('loading-overlay').classList.add('active');

            try {
                const response = await fetch('/api/execute-command', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ command: cmd, cwd: currentDir })
                });

                const result = await response.json();

                if (result.success) {
                    if (result.output) {
                        // Process output for colors
                        term.writeln(result.output);
                    }
                    if (result.cwd) {
                        currentDir = result.cwd;
                        document.getElementById('current-dir').textContent = shortenPath(currentDir);
                        document.getElementById('cwd-info').textContent = currentDir;
                    }
                } else {
                    term.writeln(`\x1b[31m${result.error || 'Command failed'}\x1b[0m`);
                }
            } catch (error) {
                term.writeln(`\x1b[31mError: ${error.message}\x1b[0m`);
            } finally {
                // Hide loading only if queue is empty or we manage it globally
                // But since we await one by one, it's safe to toggle here
                document.getElementById('loading-overlay').classList.remove('active');
                writePrompt();
            }
        }

        function shortenPath(path) {
            if (path.length > 40) {
                const parts = path.split(/[/\\]/);
                if (parts.length > 3) {
                    return parts[0] + '/.../' + parts.slice(-2).join('/');
                }
            }
            return path;
        }

        // Handle input with better paste support
        term.onData(data => {
            // Arrow keys (Escape sequences) - Handle strictly as chunks
            if (data.startsWith('\x1b[')) {
                // Up arrow
                if (data === '\x1b[A') {
                    if (historyIndex > 0) {
                        historyIndex--;
                        replaceInput(commandHistory[historyIndex]);
                    }
                    return;
                }
                // Down arrow
                if (data === '\x1b[B') {
                    if (historyIndex < commandHistory.length - 1) {
                        historyIndex++;
                        replaceInput(commandHistory[historyIndex]);
                    } else {
                        historyIndex = commandHistory.length;
                        replaceInput('');
                    }
                    return;
                }
                return; // Ignore other sequences for now
            }

            // Iterate character by character (handles parsing of pasted text)
            for (let i = 0; i < data.length; i++) {
                const char = data[i];
                const code = char.charCodeAt(0);

                // Enter (\r) or Newline (\n)
                if (code === 13 || code === 10) {
                    // Only execute if buffer has content or just newline (which prints prompt)
                    // If we just handled \r, we might want to skip \n if it follows immediately, 
                    // but command queue handles empty commands gracefully (prints prompt).
                    term.writeln('');
                    const cmdToRun = commandBuffer;
                    commandBuffer = '';
                    queueCommand(cmdToRun);
                }
                // Backspace (DEL)
                else if (code === 127) {
                    if (commandBuffer.length > 0) {
                        commandBuffer = commandBuffer.slice(0, -1);
                        term.write('\b \b');
                    }
                }
                // Ctrl+C
                else if (code === 3) {
                    term.writeln('^C');
                    commandBuffer = '';
                    writePrompt();
                }
                // Ctrl+L
                else if (code === 12) {
                    term.clear();
                    writePrompt();
                }
                // Regular Printable Characters
                else if (code >= 32) {
                    commandBuffer += char;
                    term.write(char);
                }
            }
        });

        function replaceInput(newInput) {
            // Clear current input
            term.write('\r' + PROMPT + ' '.repeat(commandBuffer.length) + '\r' + PROMPT);
            commandBuffer = newInput;
            term.write(commandBuffer);
        }

        // Utility functions
        function clearTerminal() {
            term.clear();
            writePrompt();
        }

        function toggleFullscreen() {
            document.body.classList.toggle('fullscreen');
            setTimeout(() => fitAddon.fit(), 100);
        }

        function toggleShortcuts() {
            document.getElementById('shortcuts-hint').classList.toggle('visible');
        }

        function minimizeTerminal() {
            // Could minimize to a smaller view
        }

        // Handle resize
        window.addEventListener('resize', () => {
            fitAddon.fit();
        });

        // Initialize
        showWelcome();

        // Get initial directory
        fetch('/api/execute-command', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ command: 'cd', cwd: '' })
        }).then(r => r.json()).then(result => {
            if (result.cwd) {
                currentDir = result.cwd;
                document.getElementById('current-dir').textContent = shortenPath(currentDir);
                document.getElementById('cwd-info').textContent = currentDir;
            }
        });

        // Update session time
        setInterval(() => {
            const elapsed = Math.floor((new Date() - sessionStart) / 1000);
            const mins = Math.floor(elapsed / 60);
            const secs = elapsed % 60;
            document.getElementById('session-time').textContent =
                mins > 0 ? `${mins}m ${secs}s` : `${secs}s`;
        }, 1000);

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.key === 'F11') {
                e.preventDefault();
                toggleFullscreen();
            }
            if (e.key === '?' && !e.ctrlKey && document.activeElement.tagName !== 'INPUT') {
                toggleShortcuts();
            }
        });
    </script>
